-----------------------------------------------------------
-- Creates some zombies
WorldItems.ReactsTo("zombie_gen", Events.OnItemUse,
function(player,inventory_guid,class)

    x,y,z = Game.InFrontOf(player,700,0)

    local rotate = 0

    for i = 0, 3 do

        Zombies.SpawnAt(
            x + math.random(800) - 400,
            y + math.random(800) - 400,
            z,rotate)

    end

end)
----------------------------------------------------------- 
